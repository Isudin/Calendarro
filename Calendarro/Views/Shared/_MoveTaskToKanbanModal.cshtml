@model Calendarro.ViewModels.AddNewTaskViewModel

<div class="modal fade" tabindex="-1" role="dialog" id="MoveTaskToKanban" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header w-100 text-center">
                <h5 class="modal-title  w-100 text-center">Move task to kanban</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form role="form" method="post" class="needs-validation" asp-controller="Home" asp-action="MoveTaskToKanban" id="modalForm">
                <div class="form-group w-100 text-center">
                    <h5><label asp-for="Kanban" class="col-form-label"></label></h5>
                    <input type="hidden" name="projectId" value="@Context.Request.Query["projectId"]"/>
                    <input type="text" name="taskId" id="taskId" hidden/>
                    <select asp-for="Kanban" asp-items="@(new SelectList(Model.KanbanList, "KanbanId","Name"))" id="kanban-name" name="toKanbanId">
                    </select>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary text-center">Save</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>

            </form>
        </div>
    </div>
</div>
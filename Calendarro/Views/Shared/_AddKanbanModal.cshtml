@*@model Calendarro.Models.Dto.KanbanDto*@

<div class="modal fade" tabindex="-1" role="dialog" id="AddKanban" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header w-100 text-center">
                <h5 class="modal-title  w-100 text-center">Add new kanban</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form role="form" method="post" class="needs-validation" asp-controller="Home" asp-action="AddKanban" id="modalForm">
                <div class="modal-body">

                    <div class="modal-body w-100 text-center">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    </div>

                    <div class="form-group w-100 text-center">
                        <h5><label class="col-form-label">Kanban name</label></h5>
                        <input name="name" type="text" class="form-control" id="kanbanName" oninput="validateKanbanForm() " />
                    </div>

                </div>
                <div class="modal-footer ">
                    <button type="submit" class="btn btn-primary text-center" id="submitNewKanban" disabled>Save</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>

            </form>
        </div>
    </div>
</div>
@model Calendarro.ViewModels.AddNewTaskViewModel

<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="AddEvent">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add new task</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            @* TODO frontend poprawić tutaj *@

            <form role="form" method="post" class="needs-validation" asp-controller="Calendar" asp-action="AddTask" id="modalForm">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="row">

                    @* Poprawic walidaje danych *@

                    <div class="modal-body">
                        <div class="form-group">
                            <label asp-for="Name" class="col-form-label"></label>
                            <input asp-for="Name" type="text" class="form-control" id="task-name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FinishDate" class="col-form-label"></label>
                            <input asp-for="FinishDate" id="finish-date" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Kanban" class="col-form-label"></label>
                            <input asp-for="Kanban" type="text" class="form-control" />
                        </div>
                    </div>

                    @* Te dane beda zapisane w sesji *@
                    <input name="UserId" type="hidden" value="1" class="form-control" />
                    <input name="ProjectId" type="hidden" value="1" class="form-control" />

                    <div class="modal-footer">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Save Task</button>
                        </div>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

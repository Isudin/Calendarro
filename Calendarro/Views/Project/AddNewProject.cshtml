@model Calendarro.ViewModels.NewProjectViewModel

@{
    ViewData["Title"] = "AddNewProject";
}

<div class="text-center"><h1>Nowy projekt</h1></div>

<hr />
<div class="row d-flex justify-content-center text-center">
    <div class="col-md-4 bg-secondary rounded">
        <form asp-action="AddNewProject" style="margin-top: 1em;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group text-center">
                @*<label asp-for="ProjectName" class="control-label"></label>*@
                <input asp-for="ProjectName" class="form-control" placeholder="Nazwa projektu"/>
                <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                @*<label asp-for="FinishDate" class="control-label"></label>*@
                <input asp-for="FinishDate" class="form-control" />
                <span asp-validation-for="FinishDate" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                @*<label asp-for="Description" class="control-label"></label>*@
                <input asp-for="Description" class="form-control" placeholder="Opis (opcjonalny)" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group w-100 text-center">
                <input type="submit" value="Stwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home" asp-route-projectId="@Context.Request.Query["projectId"].ToString()" id="bck" class="bg-secondary rounded">Powrót</a>
</div>

@section Scripts{

    <script>
        @*if(@ViewBag.StatusMessage != null)
        {
            alert(@ViewBag.StatusMessage);
        }*@
    </script>

}
